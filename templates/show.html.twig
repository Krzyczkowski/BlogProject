{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>{{ post.title }}</h1>
    <p>{{ post.content }}</p>
    <p>Created at: {{ post.createdAt|date('Y-m-d H:i') }}</p>

    {% if post.image %}
        <img src="{{ asset('uploads/images/' ~ post.image) }}" alt="{{ post.title }}" />
    {% endif %}
{% endblock %}
