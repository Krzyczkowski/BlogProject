{% extends 'base.html.twig' %}

{% block title %}My Posts{% endblock %}

{% block body %}
    <h3 class="add-content-button"><a href="{{ path('post_new') }}">Create Content</a></h3>
    <h3 class="add-content-button"><a href="{{ path('post_update') }}">Update Content</a></h3>
    {% if is_granted('ROLE_ADMIN') %}
        <h3 class="add-content-button"><a href="{{ path('admin_dashboard') }}">Admin Panel</a></h3>
    {% endif %}
    <h1>My posts:</h1>
    <ul>
        {% for post in posts %}
            <li >
                <div class="post">

                    {% if post.image %}
                        <center>
                            <a href="{{ path('post_show', {id: post.id}) }}"><h1 class="big">{{ post.title }}</h1>
                            <div>
                                <img src="{{ asset('uploads/images/' ~ post.image) }}" alt="{{ post.title }}" style="max-width: 50%; height: auto;" />
                            </div>
                     </a>
                        </center>
                    {% endif %}
                </div>

            </li>
        {% endfor %}
    </ul>
{% endblock %}
