{% extends 'base.html.twig' %}

{% block title %}Blog Posts{% endblock %}

{% block body %}

    <h3 class="add-content-button"><a href="{{ path('post_new') }}">Stwórz nową zawartość!</a></h3>
    <ul>
        {% for post in posts %}
            <li>
                <a href="{{ path('post_show', {id: post.id}) }}">{{ post.title }}</a>
                {% if post.image %}
                    <div>
                        <img src="{{ asset('uploads/images/' ~ post.image) }}" alt="{{ post.title }}" style="max-width: 50%; height: auto;" />
                    </div>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endblock %}
